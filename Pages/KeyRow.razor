@using System.ComponentModel.DataAnnotations
@using EICS.WordleBlazor.Game
@inject Game _game

@if (KeysToGenerate != null) {
    @foreach (var key in KeysToGenerate) {
        <MudItem xs="1" Class="d-flex justify-center">
            <KeyboardButton Text="@key" OnClick="@(_ => NotifyKeyClick(key))"/>
        </MudItem>
    }
}

@code {
    [Parameter]
    public string[]? KeysToGenerate { get; set; }

    private void NotifyKeyClick(string key) {
        _game.Input(key[0]);
    }
}
